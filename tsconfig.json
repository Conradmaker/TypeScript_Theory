{
    "include": [
        "src/**/*.ts"        //컴파일할 파일
    ],
    "exclude": [
        "node_modules"       //노드모듈은 제외
    ],
    "compilerOptions": {
        "module": "es6",  //모듈옵션
        "rootDir": "src",      //모듈의 루트가 되는 디렉토리
        "outDir": "dist",    //최상위폴더
        "target": "ES5",      //타겟
        "sourceMap": true,   // 컴파일된것이 아닌 타입스크립트 내용을 보고 싶을때
        "removeComments":true, //컴파일할 때 타입스크립트 안의 주석 제거
        "noImplicitAny": true // 원래 변수에 타입을 안정하면 any값이 오는데 any타입을 쓰면 숫자에 문자가 올수있기에 컴파일을 막아줌
    }
}